generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model AlyraProduct {
  id               String             @id @default(cuid())
  name             String
  sku              String             @unique
  type             AlyraProductType
  status           AlyraProductStatus @default(Active)
  inventory        Int                @default(0)
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  priceMinor       Int                @default(0)
  discountProducts DiscountProduct[]
}

model Customer {
  id           String    @id @default(cuid())
  email        String    @unique
  firstName    String?
  lastName     String?
  phone        String?
  acceptsEmail Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  addresses    Address[]
  orders       Order[]
}

model Address {
  id         String   @id @default(cuid())
  customerId String
  line1      String
  line2      String?
  city       String
  state      String?
  postalCode String
  country    String
  isDefault  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@index([customerId])
}

model Discount {
  id               String            @id @default(cuid())
  code             String            @unique
  type             DiscountType
  value            Int
  startsAt         DateTime?
  endsAt           DateTime?
  usageLimit       Int?
  perCustomer      Boolean           @default(true)
  minSubtotalMinor Int?
  timesUsed        Int               @default(0)
  active           Boolean           @default(true)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  scope            DiscountScope     @default(ORDER)
  productDiscounts DiscountProduct[]
}

model DiscountProduct {
  id         String       @id @default(cuid())
  discountId String
  productId  String
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  discount   Discount     @relation(fields: [discountId], references: [id], onDelete: Cascade)
  product    AlyraProduct @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([discountId, productId])
  @@index([discountId])
  @@index([productId])
}

model Order {
  id                String            @id @default(cuid())
  orderNumber       Int               @unique
  customerId        String?
  email             String
  status            OrderStatus       @default(pending)
  paymentStatus     PaymentStatus     @default(unpaid)
  fulfillmentStatus FulfillmentStatus @default(unfulfilled)
  currency          String            @default("INR")
  subtotalMinor     Int
  discountMinor     Int               @default(0)
  shippingMinor     Int               @default(0)
  taxMinor          Int               @default(0)
  totalMinor        Int
  discountCode      String?
  paymentRef        String?
  razorpayOrderId   String?           @unique
  shippingAddress   Json?
  billingAddress    Json?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
  notes             String?
  deliveryStatus    DeliveryStatus    @default(pending)
  customer          Customer?         @relation(fields: [customerId], references: [id])
  items             OrderItem[]

  @@index([email])
  @@index([customerId])
}

model OrderItem {
  id             String  @id @default(cuid())
  orderId        String
  productId      String
  variantId      String
  title          String
  variantTitle   String?
  sku            String
  unitPriceMinor Int
  qty            Int
  lineTotalMinor Int
  order          Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([variantId])
}

model Cart {
  id           String     @id @default(cuid())
  email        String?
  discountCode String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  items        CartItem[]
}

model CartItem {
  id             String   @id @default(cuid())
  cartId         String
  productId      String
  variantId      String
  title          String
  variantTitle   String?
  sku            String
  unitPriceMinor Int
  qty            Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  cart           Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)

  @@unique([cartId, variantId])
  @@index([variantId])
}

model Subscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  source    String?
  status    String   @default("subscribed")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProcessedEvent {
  id        String   @id
  createdAt DateTime @default(now())
}

model OrderCounter {
  id        String   @id @default("singleton")
  counter   Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("order_counter")
}

model MarketingFlow {
  id          String   @id @default(cuid())
  name        String
  description String?
  trigger     Json     // { event: string, conditions?: object }
  steps       Json     // Array of action steps
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  templates   EmailTemplate[]

  @@index([active])
}

model EmailTemplate {
  id          String        @id @default(cuid())
  name        String
  subject     String
  manifest    Json          // TemplateManifest structure
  flowId      String?
  flow        MarketingFlow? @relation(fields: [flowId], references: [id], onDelete: SetNull)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([flowId])
}

model AnalyticsReport {
  id            String   @id @default(cuid())
  name          String
  metric        String
  visualization String   @default("table")
  columns       Json
  rows          Json
  sql           String?
  params        Json?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  downloads     AnalyticsReportDownload[]
  charts        AnalyticsChart[]

  @@index([createdAt])
}

model AnalyticsReportDownload {
  id        String   @id @default(cuid())
  reportId  String
  userEmail String?
  createdAt DateTime @default(now())
  report    AnalyticsReport @relation(fields: [reportId], references: [id], onDelete: Cascade)

  @@index([reportId, createdAt])
}

model AnalyticsChart {
  id        String   @id @default(cuid())
  reportId  String?
  name      String
  chartType String
  config    Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  report    AnalyticsReport? @relation(fields: [reportId], references: [id], onDelete: Cascade)

  @@index([createdAt])
  @@index([reportId])
}

model BrandDocument {
  id        String   @id @default(cuid())
  title     String
  content   String   @db.Text
  category  String   // brand_tone, product_info, legal, etc.
  embedding Unsupported("vector(1536)")? // pgvector embedding (1536 dims for text-embedding-3-small)
  metadata  Json?    // { source, version, etc. }
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category])
}

enum OrderStatus {
  pending
  paid
  fulfilled
  cancelled
  refunded
}

enum PaymentStatus {
  unpaid
  paid
  refunded
}

enum FulfillmentStatus {
  unfulfilled
  fulfilled
  returned
}

enum DeliveryStatus {
  pending
  shipped
  delivered
}

enum DiscountType {
  percent
  fixed
}

enum DiscountScope {
  PRODUCT
  ORDER
}

enum AlyraProductType {
  Refill
  Set
}

enum AlyraProductStatus {
  Active
  Inactive
}
